@model StokTakipUygulaması.Models.ViewModels.AltKategoriVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Product";
}


<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Alt Kategori Ekle</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AltKategori.Isim"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AltKategori.Isim" class="form-control" />
                    <span asp-validation-for="AltKategori.Isim" class="text-danger"></span>
                </div>
            </div>         
        
            <div class="form-group row">
                <div class="col-4">
                    Kategori
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.SelectedOrderId, Model.KategoriListesi, "-Üst Kategori seçin",
                   new { @class = "form-control" })
                   
                </div>
            </div>
           
           
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Ekle</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Geri Dön</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
      
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />    
}